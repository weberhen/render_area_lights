	</shape>
	<shape type="rectangle">
		<bsdf type="diffuse">
			<spectrum name="reflectance" value="1, 1, 1"/>
		</bsdf>
		<transform name="toWorld">
			
			<rotate x="1" angle="-120"/>
			<scale x=".4" y=".5" z="10"/>
			<translate x=".05" y="-.18" z="10"/>
		</transform>
	</shape>
	<emitter type="envmap">
        <string name="filename" value="render_pano.exr" />
