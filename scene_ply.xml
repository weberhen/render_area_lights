<scene version="0.5.0">
	<integrator type="direct">
		<boolean name="hideEmitters" value="false" />
		<integer name="maxDepth" value="32" />
	</integrator>
	<sensor type="perspective">
		<float name="fov" value="80" />
		<sampler type="independent">
			<integer name="sampleCount" value="32" />
		</sampler>
		<transform name="toWorld">
			<lookat origin="0, 1, 1.5" target="0, 0, 0" up="0, 1, 0" />
		</transform>
		<film type="hdrfilm">
			<integer name="width" value="600" />
			<integer name="height" value="400" />
			<boolean name="banner" value="false" />
			<string name="pixelFormat" value="rgba" />
			<boolean name="attachLog" value="false" />
		</film>
	</sensor>
    <shape type="ply">
		<string name="filename" value="scene.ply" />
	</shape>
	<shape type="ply">
		<transform name="toWorld">
			<scale value="$objscale" />
			<translate x="$objx" y="$objy" z="$objz" />
		</transform>
		<string name="filename" value="$objply" />
	</shape>
	<shape type="sphere">
		<transform name="toWorld">
			<scale value="$scaleL1" />
			<translate x="$posL1x" y="$posL1y" z="$posL1z" />
		</transform>
		<emitter type="area">
			<spectrum name="radiance" value="$intL1" />
		</emitter>
	</shape>
	<shape type="sphere">
		<transform name="toWorld">
			<scale value="$scaleL2" />
			<translate x="$posL2x" y="$posL2y" z="$posL2z" />
		</transform>
		<emitter type="area">
			<spectrum name="radiance" value="$intL2" />
		</emitter>
	</shape>
	<shape type="sphere">
		<transform name="toWorld">
			<scale value="$scaleL3" />
			<translate x="$posL3x" y="$posL3y" z="$posL3z" />
		</transform>
		<emitter type="area">
			<spectrum name="radiance" value="$intL3" />
		</emitter>
	</shape>
</scene>
